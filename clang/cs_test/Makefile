##
##  Makefile -- Build procedure for sample cs_test Apache module
##  Autogenerated via ``apxs -n cs_test -g''.
##

builddir=.
top_srcdir=/etc/httpd
top_builddir=/usr/lib/httpd
include /usr/lib/httpd/build/special.mk

#   the used tools
APXS=apxs
APACHECTL=apachectl

#   additional defines, includes and libraries
#DEFS=-Dmy_define=my_value
INCLUDES=-I/usr/include/ClearSilver
LIBS=-lneo_cs -lneo_utl

#   the default target
#all: local-shared-build
all: 
	${APXS} -c ${INCLUDES} ${LIBS} -Wl,-g mod_cs_test.c

#   install the shared object file into Apache 
install: install-modules-yes

#   cleanup
clean:
	-rm -f mod_cs_test.o mod_cs_test.lo mod_cs_test.slo mod_cs_test.la 

#   simple test
test: reload
	lynx -mime_header http://localhost/cs_test

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

